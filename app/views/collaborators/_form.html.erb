<%= form_for [collaborator, wiki], url: collaborators_path, method: :post do |f| %>

  <div class='form-group'>
    <%= f.label :add_collaborator %>
    <%= email_field_tag :collaborators_email,
                     params[:collaborators_email],
                     class: 'form-control',
                     placeholder: "Collaborator's email address"
                     %>
    <%= hidden_field_tag :wiki, wiki.id %>

  </div>

  <div class="form-group">
    <%= f.submit "Add",class: "btn btn-success btn-lrg" %>
  </div>

<% end %>
