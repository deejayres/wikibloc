<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <div class="media">
        <br />
        <div class ="media-body">
          <h2 class="media-heading">Welcome, <%= @user.username %>!</h2>
          <% if @user.is_premium? %>
            <p>Hey, thanks for being a premium user!  You may create your own private wikis</p>
          <% end %>
        </div>

        <% avatar_url = @user.avatar_url(128) %>
        <% if avatar_url %>
            <div class="media-right">
              <figure>
                <%= image_tag avatar_url, class: "media-object img-rounded" %>
                <figcaption  style="text-align:center;"><small><a href="http://gravatar.com">Change your avatar.</a></small></figcaption>
              </figure>
            </div>
        <% end %>
      </div>

      <div class="row vertical-align">
        <div class="col-md-6">
          <h1 class="pull-left">Your Wikis</h1>
        </div>
        <div class="col-md-6">
          <span class="pull-right">
            <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-info' %>
          </span>
        </div>
      </div>

      <div class="row">
        <div class="list-group">
          <% @user.wikis.each do |wiki| %>
            <a href="<%= wiki_path(wiki.id) %>" class="list-group-item">
              <% if wiki.private %>
                <span class="badge">private</span>
              <% end %>
              <%= wiki.title %>
            </a>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
